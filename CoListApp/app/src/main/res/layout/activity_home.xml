<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activities.HomeActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/top_app_bar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/materialToolbar"
			android:layout_width="match_parent"
			android:layout_height="107dp"
			app:menu="@menu/main_menu"
			app:title="Home" />
	</com.google.android.material.appbar.AppBarLayout>

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/homeSwipeContainer"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appBarLayout" >
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/homeRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			/>

	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<com.google.android.material.progressindicator.CircularProgressIndicator
		android:id="@+id/homeProgressBar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminate="true"
		android:visibility="visible"
		app:indeterminateAnimationType="disjoint"
		app:trackColor="@color/casal"
		app:trackThickness="20dp"
		app:indicatorColor="@color/soapstone"
		app:showAnimationBehavior="inward"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/createListButton"
		style="@style/Widget.AppCompat.Button"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/colist_button"
		android:drawableStart="@drawable/ic_create_list_add_icon"
		android:drawablePadding="10dp"
		android:fontFamily="@font/gilroy_bold"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:text="Create New List"
		android:textColor="@color/bone"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/homeSwipeContainer"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/emptyStateLayout"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/homeSwipeContainer"
		app:layout_constraintEnd_toEndOf="@id/homeSwipeContainer"
		app:layout_constraintStart_toStartOf="@id/homeSwipeContainer"
		app:layout_constraintTop_toBottomOf="@id/appBarLayout">

		<TextView
			android:id="@+id/textView4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/gilroy_semibold"
			android:text="You have no lists."
			android:textColor="@color/black"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<ImageView
			android:id="@+id/imageView5"
			android:layout_width="300dp"
			android:layout_height="200dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@id/textView5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/textView4"
			app:srcCompat="@drawable/no_lists_empty_state_image" />

		<TextView
			android:id="@+id/textView5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/gilroy_mediumitalic"
			android:text="Enjoy your day!"
			android:textSize="12sp"
			android:textStyle="italic"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>